@{
    ViewBag.Title = "Chega Mais Calouro";
    Layout = "~/Views/Home/_Layout.cshtml";
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
     <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
}

  <div id="carrossel">
        <div class="container" style="width:100%;  padding:0%; margin:0%;">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators --> 
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides --> 
                <div class="carousel-inner"  >

                    <div class="item active">                       
                        <img src="~/Content/themes/Carrossel/puc-sp-2.jpg"  alt="Unip-Paulista" style="width:100%;  height:662px; " overflow="hidden">
                        <div class="carousel-caption">                          
                            <h3>PUC-SP</h3>                           
                        </div>
                    </div>

                    <div class="item">
                            <img src="../../Content/themes/Carrossel/FORP.jpg" alt="USP" style="width:100%;  height:662px; " overflow="hidden">
                            <div class="carousel-caption">
                            <h3>USP-Ribeirão Preto</h3>                                                    
                        </div>
                    </div>

                    <div class="item">
                        <img src="../../Content/themes/Carrossel/usp%20sao%20carlos.jpg"  alt="USP-São Carlos" style="width:100%;  height:662px; " overflow="hidden">
                        <div class="carousel-caption">                            
                            <h3>USP-São Carlos</h3>
                     </div>
                    </div>

                </div> 

                <!-- Left and right controls --> 
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
